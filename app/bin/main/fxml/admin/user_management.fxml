<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.leveltrack.controller.UserManagementController">
    <center>
        <TableView fx:id="userTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="emailColumn" text="Email" />
                <TableColumn fx:id="roleColumn" text="Role" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="center">
            <Button fx:id="updateRoleButton" text="Update Role" />
            <Button fx:id="deleteUserButton" text="Delete User" />
        </HBox>
    </bottom>
</BorderPane>
