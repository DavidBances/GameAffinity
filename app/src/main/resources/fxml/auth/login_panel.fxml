<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gameaffinity.view.LoginPanelView">
    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <children>
                <!-- Email Field -->
                <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Password Field -->
                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Login Button -->
                <Button fx:id="loginButton" text="Login" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

                <!-- Register Button -->
                <Button fx:id="registerButton" text="Create Account" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
